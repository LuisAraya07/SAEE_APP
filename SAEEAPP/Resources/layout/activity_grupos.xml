<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:cacheColorHint="#4A97D3"
        android:divider="@color/colorAccent"
        android:dividerHeight="1dp"
        android:headerDividersEnabled="true"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        />

    <TextView
        android:id="@+id/txtSecciones"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/grupo"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="20.0dp"
        android:layout_marginTop="37.7dp"
        android:text="@string/seccionGrupos"
        android:textSize="20sp"
        android:id="@+id/textViewGrupos"
        android:layout_marginRight="0.0dp"
        android:layout_marginBottom="9.6dp"
        android:layout_below="@id/txtSecciones" />
    <TextView
        android:id="@+id/textViewOpciones"
        android:layout_width="91.0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:text="@string/opciones"
        android:layout_toRightOf = "@id/textViewOpciones"
        android:layout_alignBaseline = "@id/textViewGrupos"
        android:textSize="20sp"
        android:layout_marginLeft="115.0dp"
        android:layout_below="@id/txtSecciones" />
    <TextView
        android:id="@+id/textViewOpciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf = "@id/textViewGrupos"
        android:layout_alignBaseline = "@id/textViewGrupos"
        android:text="@string/anio"
        android:textSize="20sp"
        android:layout_marginLeft="46.9dp" 
        />

</RelativeLayout>
