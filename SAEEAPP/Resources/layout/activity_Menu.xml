<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo">
    <Button
        android:textColor="#3282b8"
        android:background="@drawable/button_border_edit"
        android:text="Cursos"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/btCursos"
        android:layout_marginTop="30dp" />
    <Button
        android:textColor="#3282b8"
        android:background="@drawable/button_border_edit"
        android:text="Grupos"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_below="@id/btCursos"
        android:layout_marginTop="30dp"
        android:id="@+id/btGrupos" />
    <Button
        android:textColor="#3282b8"
        android:background="@drawable/button_border_edit"
        android:text="Estudiantes"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btGrupos"
        android:id="@+id/btEstudiantes" />
    <Button
        android:textColor="#3282b8"
        android:background="@drawable/button_border_edit"
        android:text="Asignaciones"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btEstudiantes"
        android:id="@+id/btAsignaciones" />
    <Button
        android:textColor="#3282b8"
        android:background="@drawable/button_border_edit"
        android:text="Profesores"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btAsignaciones"
        android:id="@+id/btProfesores" />
    <Button
        android:textColor="#3282b8"
        android:background="@drawable/button_border_edit"
        android:text="Evaluaciones"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btProfesores"
        android:id="@+id/btEvaluaciones" />

</RelativeLayout>
