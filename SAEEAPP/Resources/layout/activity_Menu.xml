<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:text="Cursos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/btCursos" />
    <Button
        android:text="Grupos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btGrupos" />
    <Button
        android:text="Estudiantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btEstudiantes" />
    <Button
        android:text="Asignaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btAsignaciones" />
    <Button
        android:text="Profesores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btProfesores" />
    <Button
        android:text="Evaluaciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btEvaluaciones" />

</LinearLayout>
