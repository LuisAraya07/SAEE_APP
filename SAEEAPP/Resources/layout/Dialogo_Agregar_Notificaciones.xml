<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollViewAgregarNotificacion">
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
        <TextView
            android:text="Fecha"
            android:layout_width="match_parent"
            android:layout_height="30.5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/tvDate"
            android:layout_marginTop="11.8dp"
            android:textColor="#FFF"
            android:layout_marginLeft="5dp" 
        />
        <EditText
        android:id="@+id/date_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:backgroundTint="#FFF"
        android:focusable="false" />

         <TextView
        android:text="Hora"
            android:layout_marginLeft="5dp" 
        android:layout_width="match_parent"
        android:layout_height="30.5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvTime"
        android:layout_marginTop="11.8dp"
        android:textColor="#FFF"
        />
        <EditText
            android:id="@+id/time_display"
            android:textColor="#FFF"
            android:backgroundTint="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:layout_below = "@id/date_display"
            android:focusable="false" />
        <TextView
        android:text="Recordatorio"
            android:layout_marginLeft="5dp" 
        android:layout_width="match_parent"
        android:layout_height="30.5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvRecordatorio"
        android:layout_marginTop="11.8dp"
        android:textColor="#FFF"
        />
        <EditText
            android:id="@+id/txtNote"
            android:textColor="#FFF"
            android:backgroundTint="#FFF"
            android:layout_width="match_parent"
            android:layout_height="49.0dp"
            android:layout_below = "@id/time_display" />
        <TextView
            android:text="Seleccione los días de anticipación"
            android:layout_marginLeft="5dp" 
            android:textColor="#FFF"
            android:backgroundTint="#FFF"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="286.0dp"
            android:layout_height="wrap_content"
            android:layout_below = "@id/txtNote"
            android:id="@+id/textView1"
            android:layout_marginTop="9.5dp" />

        <Spinner
            android:theme="@style/spinnerTheme"
            android:layout_width="109.0dp"
            android:layout_height="35.5dp"
            android:layout_below="@id/txtNote"
            android:id="@+id/spinner1"
            android:layout_marginTop="5.0dp"
            android:backgroundTint="#FFFF"
            android:outlineSpotShadowColor="#FFFF"
            android:layout_marginRight="9.5dp"
            android:layout_toRightOf="@id/textView1"
            android:outlineAmbientShadowColor="#ffffffff"
            android:popupBackground="#ffffffff"
            app:backgroundTint="@android:color/background_light" />

    
   
    </LinearLayout>     
    
</ScrollView>