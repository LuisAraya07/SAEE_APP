
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp">
    <TextView
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:minWidth="25px"
        android:minHeight="25px"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="15dp"
        android:textSize="16sp"
        android:layout_marginTop="15.0dp"
        android:id="@+id/tvNombre" />
    <TextView
        android:text="CÃ©dula"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNombre"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:textSize="16sp"
        android:id="@+id/tvCedula" />
    <TextView
        android:text="Correo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCedula"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:textSize="16sp"
        android:id="@+id/tvCorreo" />
    <Button
        android:text="Editar"
        android:layout_width="107dp"
        android:layout_height="37.9dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/btEditar"
        android:textColor="#3282b8"
        android:background="@drawable/button_border_edit"/>
    <Button
        android:textColor="#f65c78"
        android:background="@drawable/button_border_delete"
        android:text="Borrar"
        android:layout_width="107dp"
        android:layout_height="37.9dp"
        android:layout_marginLeft="0.0dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/btEditar"
        android:id="@+id/btBorrar" />

</RelativeLayout>