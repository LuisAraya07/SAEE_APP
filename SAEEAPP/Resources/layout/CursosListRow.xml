<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp">
    <TextView
        android:text="Nombre"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:id="@+id/tvNombre" />
    <TextView
        android:text="Cantidad de periodos"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvNombre"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:id="@+id/tvCantidadPeriodos" />
    
    <Button
        android:textColor="#3282b8"
        android:background="@drawable/button_border_edit"
        android:minWidth="25px"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="37.9dp"
        android:layout_marginTop="14.4dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/btnOpcionesC"
        android:layout_marginLeft="22.1dp" />

</RelativeLayout>
