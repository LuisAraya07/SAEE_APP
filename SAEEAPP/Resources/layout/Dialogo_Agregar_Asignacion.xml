
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollViewAgregarCurso">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">
        <TextView
            android:text="Curso"
            android:layout_width="match_parent"
            android:layout_height="30.5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvCurso"
            android:textColor="#FFF"
        />
        <Spinner
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:backgroundTint="#FFF"
            android:id="@+id/spCurso" />
        <TextView
            android:text="Grupo"
            android:layout_width="match_parent"
            android:layout_height="30.5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvGrupo"
            android:textColor="#FFF"
        />
        <Spinner
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:backgroundTint="#FFF"
            android:id="@+id/spGrupo" />
        <TextView
            android:text="Rubro"
            android:layout_width="match_parent"
            android:layout_height="30.5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvTipo"
            android:textColor="#FFF"
        />
        <Spinner
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:backgroundTint="#FFF"
            android:id="@+id/spTipo" />
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFF"
            android:id="@+id/tilNombre">
            <android.support.design.widget.TextInputEditText
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:hint="Nombre"
                android:textColor="#FFF"
                android:backgroundTint="#FFF"
                android:id="@+id/etNombre" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFF"
            android:id="@+id/tilDescripcion">
            <android.support.design.widget.TextInputEditText
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:maxLength="10"
                android:hint="DescripciÃ³n"
                android:textColor="#FFF"
                android:backgroundTint="#FFF"
                android:id="@+id/etDescripcion" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFF"
            android:id="@+id/tilFecha">
            <android.support.design.widget.TextInputEditText
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:maxLength="10"
                android:hint="Fecha"
                android:textColor="#FFF"
                android:backgroundTint="#FFF"
                android:id="@+id/etFecha"
                android:focusable="false"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFF"
            android:id="@+id/tilPuntos">
            <android.support.design.widget.TextInputEditText
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:maxLength="10"
                android:hint="Puntos"
                android:textColor="#FFF"
                android:backgroundTint="#FFF"
                android:id="@+id/etPuntos" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#FFF"
            android:id="@+id/tilPorcentaje">
            <android.support.design.widget.TextInputEditText
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:maxLength="10"
                android:hint="Porcentaje"
                android:textColor="#FFF"
                android:backgroundTint="#FFF"
                android:id="@+id/etPorcentaje" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</ScrollView>